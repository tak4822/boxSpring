include parts/btn
mixin testimonial(logoHref,content,name,company,detailNum)
  .tes-each-wrap.each-items.rotate-pre
    .tes-inner-wrap
      .tes-logo-wrap
        img(src=logoHref,alt="our previous company's logo")
      p.tes-content #{content}
      .tes-from
        p.tes-name #{name}
        i.tes-company #{company}
      .tes-btn
        +btn(detailNum,"See Details")
